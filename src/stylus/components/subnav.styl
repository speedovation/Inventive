.subnav .active
   background-color #f2f2f2
   color #444

.subnav 
  padding: 0
  list-style: none
  letter-spacing: -0.31em

.subnav > li 
  position: relative
  letter-spacing: normal

.subnav > li,
.subnav > li > a,
.subnav > li > span 
  display: inline-block

.subnav > li:nth-child(n+2) 
  margin-left: 10px

.subnav > li > a 
  color: #0077dd

.subnav > li > a:hover 
  color: #005599

.subnav > li > span 
  color: #999999

.subnav-line > li:nth-child(n+2):before 
  content: ""
  display: inline-block
  height: 10px
  margin-right: 10px
  border-left: 1px solid #dddddd

.subnav-pill > li > a,
.subnav-pill > li > span 
  padding: .7rem 1rem
  text-decoration: none

.subnav-pill > li > a:hover,
.subnav-pill > li > a:focus 
  background: #eeeeee
  color: #444444
  outline: none

.subnav-pill > li.active > a 
  background: #00a8e6
  color: #ffffff
