.search 
  display: inline-block
  position: relative
  margin: 0

.search:before 
  content: "\f002"
  position: absolute
  top: 0
  left: 0
  width: 30px
  line-height: 30px
  text-align: center
  font-family: Stripe
  font-size: 14px
  color: rgba(0, 0, 0, 0.2)

.search-field 
  width: 120px
  height: 30px
  padding: 0 30px
  border: 1px solid rgba(0, 0, 0, 0)
  border-radius: 0
  background: rgba(0, 0, 0, 0)
  color: #444444
  transition: all linear 0.2s

// Needed to reset iOS `input[type="search"]` appearance
// Higher specificity to override appearance set by normalize.less

input.search-field 
  -webkit-appearance: none

.search-field:-ms-input-placeholder 
  color: #999999

.search-field::-moz-placeholder 
  color: #999999

.search-field::-webkit-input-placeholder 
  color: #999999

// Removes cancel button in IE10
.search-field::-ms-clear 
  display: none

.search-field:focus 
  outline: 0

.search-field:focus,
.active .search-field 
  width: 180px

.search-close 
  display: none
  position: absolute
  top: 0
  right: 0
  width: 30px
  line-height: 30px
  text-align: center
  font-size: 14px
  color: rgba(0, 0, 0, 0.2)
  padding: 0
  border: 0
  -webkit-appearance: none
  background: transparent

.loading > .search-close,
.active > .search-close 
  display: block

.search-close:after 
  display: block
  content: "\f00d"
  font-family: Stripe

.loading > .search-close:after 
  content: "\f110"
  animation: spin 2s infinite linear
