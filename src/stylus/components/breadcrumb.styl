.breadcrumb 
  padding: 0
  list-style: none
  letter-spacing: -0.31em

// Reset whitespace hack
.breadcrumb > li 
  letter-spacing: normal

.breadcrumb > li,
.breadcrumb > li > a,
.breadcrumb > li > span 
  display: inline-block

.breadcrumb > li:nth-child(n+2):before 
  content: "/"
  display: inline-block
  margin: 0 8px
  vertical-align: top

// Disabled
.breadcrumb > li:not(.active) > span 
  color: #999999
