.button, button ,a.button
    // box model

    display: inline-block
    //padding: 0.4em 0.9em 0.25em
    padding: 0.5rem 0.9rem;// 0.61rem
    //padding 0 0 .15rem 0
    margin: 0px
    width: auto
    position: relative
    
    // typography
    font-weight: normal
    font-size: 0.9rem
    text-decoration: none
    //text-align: center
    line-height: normal
    letter-spacing: -0.01em
    
    // layout //Not supported by Autoprefixer
    -moz-appearance: button
    
    box-sizing: content-box
    
    // other
    cursor: pointer
    outline: none
    
    // text
    color: darken(#333, 10)
    //text-shadow: 0 1px #fff
    
    // border
    border: 1px solid #ccc
    border-radius: 0.1rem
    //box-shadow(0 -0.15rem 0 rgba(0, 0, 0, 0.15) inset)

    //border-radius: 4px;
    // fill
    //background-image: linear-gradient(darken(#eee, 0), darken(#eee, 0))
    background-color: #eee
    
    // default hover/focus
    &:hover,&:focus 
           
        color: #333
        border: 1px solid #bbb
        //text-shadow: 0 1px #fff
        //background-image: linear-gradient(#fefefe, #eee)
        background-color: #fefefe
    
    
    // some built-in color-styles

    &.primary 
        mybutton(200)
        
        &:hover, &:focus 
            mybutton(200, 5)
    
    &.info 
        mybutton(170)
        text-shadow: none
        
        &:hover, &:focus 
            mybutton(170, 5)    
    
    
    &.negative 
        mybutton(5)
        text-shadow: none
        
        &:hover, &:focus 
            mybutton(5, 5)
    
    &.success 
        mybutton(120)
        
        &:hover,&:focus 
            mybutton(120, 5)    
    
    
    &.positive 
        mybutton(80)
        
        &:hover,&:focus 
            mybutton(80, 5)
    
    //35    
    &.warning
        mybutton(410)
        
        &:hover,&:focus 
            mybutton(410, 5)

    &.dark 
        color: #aaa
        border: 1px solid hsl(0, 0, 0)
        //text-shadow: 0 1px hsl(0, 0, 90)
        //background-image: linear-gradient(, )
        background-image: linear-gradient(0deg, hsl(0, 0, 8),hsl(0, 0, 10) 50.0%)
        //box-shadow(inset 0 1px 0 hsl(0, 0, 90))
        
        &:hover, &:focus 
            background-image: linear-gradient(hsl(0, 0, 15), hsl(0, 0, 13))
        
    &.link
        background-image none
        border none
        box-shadow:none
        background none
        color #28356A
        &:hover
            text-decoration underline
            color #2B3A71
    
    
    // default disabled
    &.disabled,&[disabled] 
        // remove gradient
        background-image: none !important
        background none
        filter: none !important
        border 1px solid #A2A2A2
        
        // remove shadows
        text-shadow: none
        box-shadow : none
        
        // reduce opacity
        filter: "alpha(opacity=50)"
        opacity: 0.5
        
        // remove pointer
        cursor: default
        &:hover
            color inherit
