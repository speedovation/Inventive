/*    Mobile and up   */

*, *::before, *::after
    box-sizing: border-box
    -webkit-box-sizing: border-box
    -moz-box-sizing: border-box

.row 
    padding: 0 gutterWidth/2
    clear()


.row .row 
    padding: 0

//.row > *
//    float: left


[class*="push-"],
[class*="pull-"] 
    position: relative


[class*="mobile-"]
    position: relative
    min-height: 1px
    padding-right: (gutterWidth / 2)
    float: left

[class*="mobile-"]:last-child
        padding-right 0

generate-grid("mobile")
generate-offset("mobile") 

generate-pull("mobile")
generate-push("mobile")

