@import "_funcs"
//Grid doc css
.example 
  .grid 
    margin-bottom: 30px;
    margin-top: 0;

    [class*="desktop-"] 
      background: none repeat scroll 0 0 #ddd;
      border-radius: 3px;
      color: #555;
      margin-bottom: 1.8%;
      overflow: hidden;
      padding-bottom: 40px;
      padding-top: 40px;
      text-align: center;
      -webkit-transition: background-color 2s ease-out;
      -moz-transition: background-color 2s ease-out;
      -o-transition: background-color 2s ease-out;
      transition: background-color 2s ease-out;

  .row .row [class*="desktop-"] 
    background: none repeat scroll 0 0 rgba(255,255,255,0.25);
    margin-bottom: 0;

  .row:hover [class*="desktop-"] 
    background: none repeat scroll 0 0 #aaa;

  .row:hover [class*="desktop-"] [class*="desktop-"] 
    background: none repeat scroll 0 0 rgba(255,255,255,0.25);
    margin-bottom: 0;

  .span_d 
    display: block;

  .span_t,
  .span_m 
   display: none;

@media screen and (max-width: 979px) 
  .example .span_d 
    display: none;
  

@media screen and (min-width: 740px) and (max-width: 979px) 
  .example .span_t 
    display: block;
  

@media screen and (min-width: 0px) and (max-width: 739px) 
  .example .span_m 
    display: block;


//Preview tab ui look for doc  
.markup,.preview
    position relative
    //font-size 0.9rem
    margin-top 1.5rem
 

.markup:after,.preview:after
    background-color: #F7F7F7;
    border: 1px solid #DDDDDD;
    border-radius: 4px 0;
    color: #9DA0A4;
    content: "HTML";
    font-size: 0.8rem
    font-weight: 300
    left: -1px;
    padding: 3px 7px;
    position: absolute;
    top: -1px;
    max-height 24px 

.preview    
    padding 3.5rem 2rem 2rem
    border 1px solid #ddd
    background-color #FEFEFE
    min-height 200px
    //color: #CC470D;

    &:after
        content "PREVIEW"
        max-width: 64px;
        left: -1px;
        top -1px
        font-weight 300
        font-size: 0.8rem


.preview-tab 
    position relative
    margin-bottom 2rem !important
    
    &:after
        background-color: #F7F7F7;
        border: 1px solid #c1c1c1;
        border-radius: 0;
        top: 2px;
        right: 0
        color: #777777;
        content: "Example with Markup";
        padding: 6px 20px;
        position: absolute;
        text-align: left
        font-weight 300
        font-size 0.9rem       

    .resp-tab-content    
        min-height 200px
        border 0

    .resp-tabs-list li 
        margin 0 -1px -2px 15px  
        padding 8px 15px 
        border-radius(0)

    h2.resp-accordion 
        padding: 9px 15px
 
