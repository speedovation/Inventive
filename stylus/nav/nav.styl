@import "../_funcs"

//http://osvaldas.info/drop-down-navigation-responsive-and-touch-friendly

#nav
  width 100%
  margin 0
  padding 0

  //font-family 'Open Sans', sans-serif
  //font-weight 400
  //position absolute
  //top 25%
  //left 50%
  //margin-left -30em
  & > a
    display none
  li
    position relative
    margin 0
    a
      color #fff
      display block
      text-decoration none
      font-size 15px
      &:active
        background-color #c00 !important

  a.dropdown
    position relative
    &:after
      width 0
      height 0
      // border 0.313em solid transparent
      // border-bottom none
      // bordercolor #efa585
      // content ''
      // vertical-align middle
      // display inline-block
      // position relative
      // right -0.313em

      top 45%
      right 3%
      border solid transparent
      content " "

      position absolute
      pointer-events none
      border-color rgba(213, 202, 196, 0)
      border-top-color #efa585
      border-width 9px
      margin-left -30px




  //First level
  & > ul
    
    padding-left 1%
    height 3.75em
    background-color #e15a1f
    border-radius(4px)


    & > li
      width 24.67%
      height 100%
      float left
      margin 0
      & > a
        height 100%
        font-size 1.5rem
        line-height 2.5
        text-align center


  & > ul > li:not( :last-child ) > a
    border-right: 1px solid #cc470d;

  & > ul > li:hover > a,  & > ul:not( :hover ) > li.active > a
    background-color: #cc470d;



  //Second level 

  li
    ul
      background-color #cc470d
      display none
      position absolute
      top 100%
      margin 0
      padding 0
      border-radius(0 0 4px 4px)
      z-index 1000
      a
        font-size 1.25emszraQZXW
        border-top 1px solid #e15a1f
        padding 0.75em
        padding-left 2em
        &:hover, 
        &.active
            background-color #e15a1f

    &:hover
      ul
        display block
        left 0
        right 0
    &:not(:first-child):hover ul
        left -1px

    & ul li:last-child a:hover
        border-radius(0 0 4px 4px)

    //& ul li a:hover,
    //& ul:not( :hover ) li.active a
    //background-color #e15a1f




@media only screen and ( max-width: 62.5em ) /* 1000 */
  #nav
    width: 100%;
    position: static;
    margin: 0;


@media only screen and ( max-width: 40em ) /* 640 */
  html
    font-size: 75%; /* 12 */


  #nav
    position relative
    top auto
    left auto
    & > a
      width 3.125em
      height 3.125em
      text-align left
      text-indent -9999px
      background-color #e15a1f
      position relative
      &:after
        top 60%

  #nav > a:before,
  #nav > a:after
    position absolute
    border 2px solid #fff
    top 35%
    left 25%
    right 25%
    content ''



  #nav:not( :target ) > a:first-of-type,
  #nav:target > a:last-of-type
    display: block;



  /* first level */

  #nav
    & > ul
      height auto
      display none
      position absolute
      left 0
      right 0
      & > li
        width 100%
        float none
        & > a
          height auto
          text-align left
          padding 0 0.833em
    &:target
      & > ul
        display block

  #nav > ul > li:not( :last-child ) > a
    border-right: none;
    border-bottom: 1px solid #cc470d;



  /* second level */

  #nav
    li
      ul
        position static
        padding 1.25em
        padding-top 0

